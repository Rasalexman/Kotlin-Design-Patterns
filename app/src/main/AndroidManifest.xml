<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.mincor.kotlindesignpatterns">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".patterns.observer.ObserverActivity"/>
        <activity android:name=".patterns.strategy.StrategyActivity"/>
        <activity android:name=".patterns.decorator.DecoratorActivity"/>
        <activity android:name=".patterns.Builder.BuilderActivity"/>
    </application>

</manifest>